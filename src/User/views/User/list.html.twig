{% extends "Template/layout.html.twig" %}

{% block content %}
    {% if users|length %}
        <ul>
            {% for user in users %}
                <li>
                    {# @todo generate url using some view helper #}
                    <dl>
                        <dt>Id</dt>
                        <dd>{{ user.getId() }}</dd>
                        <dt>Username</dt>
                        <dd>{{ user.getUsername() }}</dd>
                        <dt>Wallet</dt>
                        <dd>{{ user.getWallet() }}</dd>

                        <dt>Actions</dt>
                        <dd>
                            <a href="{{ "/users/login/%s"|format(user.getId()) }}">login as {{ user.getUsername() }}</a>
                        </dd>
                    </dl>
                </li>
            {% endfor %}
        </ul>    {% else %}
        List is empty
    {% endif %}


{% endblock %}