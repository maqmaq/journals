{% extends "Template/layout.html.twig" %}

{% block content %}
    <div>List of authors</div>

    {% if authors|length %}
        <ul>
            {% for author in authors %}
                <li>
                    <a href="{{ generateUrlForRoute('author_show', {'id' : author.getId()}) }}">{{ author.getFirstName() }} {{ author.getLastName() }}</a>
                </li>
            {% endfor %}
        </ul>

    {% else %}
        <div>List is empty<div>
    {% endif %}


{% endblock %}